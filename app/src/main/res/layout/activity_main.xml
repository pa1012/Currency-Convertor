<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/editTextAmount"
        android:textSize="40dp"
        android:textAlignment="textStart"
        android:background="@android:color/darker_gray"
        android:textColor="@android:color/black"
        />

    <GridLayout
        android:id="@+id/gridBC"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_row="0"
            android:layout_column="1"
            android:layout_gravity="center_vertical"
            android:text="VND"
            android:textSize="20dp"
            android:id="@+id/textViewAbbBC"
            />

        <ImageView
            android:id="@+id/imageViewBC"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/vietnam"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_row="0"
            android:layout_column="4"
            android:orientation="vertical"
            android:gravity="end"
            android:layout_columnWeight="1"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:text="0.0"
                android:textColor="@android:color/black"
                android:textSize="20dp"
                android:id="@+id/textViewAmountBC"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:text="Vietnamese dong"
                android:textSize="15dp"
                android:id="@+id/textViewNameBC"/>

        </LinearLayout>

    </GridLayout>


    <ListView
        android:id="@+id/listViewTargetCurrency"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:orientation="horizontal"
        android:weightSum="2"
        >
        <Button
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:text="History"
            android:id="@+id/historyButton"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/addTargetCurrencyButton"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:text="Add"
            android:layout_weight="1"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="4">


        <GridLayout

            android:id="@+id/gridKeyNumber"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:columnCount="3"
            android:rowCount="4"></GridLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:layout_weight="3"
            android:orientation="vertical"
            android:weightSum="5">

            <Button
                android:id="@+id/deleteBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Del" />


            <Button
                android:id="@+id/divideBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="/" />

            <Button
                android:id="@+id/multiplyBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="*" />

            <Button
                android:id="@+id/subtractBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="-" />

            <Button
                android:id="@+id/addBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="+" />


        </LinearLayout>


    </LinearLayout>

</LinearLayout>